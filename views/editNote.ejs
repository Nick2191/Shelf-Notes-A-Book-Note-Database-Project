
<%- include('partials/header.ejs') %>


<div class="container">
    <h2 class="mogra-regular">Edit Note</h2>
    <form action="/editNote" method="POST">
        <div class="row">
            <div class="col-12 col-md-3">
                <div class="mb-2 form-floating shadow-sm">
                    <input type="text" id="author" name="author" class="form-control" value="<%= book[0].author %>" required>
                    <label for="floating-input">Author:</label>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="mb-2 form-floating shadow-sm">
                    <input type="text" id="isbn" name="isbn" class="form-control" value="<%= book[0].isbn %>">
                    <label for="floating-input">ISBN:</label>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="mb-2 form-floating shadow-sm">
                    <select type="number" id="rating" name="rating" class="form-select mb-2"  required>
                        <option value="1" <%= book[0].rating == 1 ? 'selected' : '' %>>1</option>
                        <option value="2" <%= book[0].rating == 2 ? 'selected' : '' %>>2</option>
                        <option value="3" <%= book[0].rating == 3 ? 'selected' : '' %>>3</option>
                        <option value="4" <%= book[0].rating == 4 ? 'selected' : '' %>>4</option>
                        <option value="5" <%= book[0].rating == 5 ? 'selected' : '' %>>5</option>
                    </select>
                    <label for="floatingSelect">Rating:</label>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="mb-2 form-floating shadow-sm">
                    <input type="date" id="date_read" name="date_read" class="form-control" value="<%= book[0].date_read %>" required>
                    <label for="date_read">Date Read:</label>
                </div>
            </div>
        </div>
            <div class="mb-2 form-floating shadow-sm">
                <input type="text" id="title" name="title" class="form-control" value="<%= book[0].title %>" required>
                <label for="floating-input">Title:</label>
            </div>
            <div class="mb-2 form-floating shadow-sm">
                <textarea id="summary" name="summary" class="form-control" style="height: 150px;" required><%= book[0].summary %></textarea>
                <label for="floating-textarea">Summary:</label>
            </div>
            <div class="mb-2 form-floating shadow-sm">
                <textarea id="notes" name="notes" class="form-control" style="height: 200px;" required><%= book[0].notes %></textarea>
                <label for="floating-textarea">Notes:</label>
            </div>
        <button type="submit" class="btn btn-primary mt-2 w-100 shadow-sm fw-medium">Apply Changes <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 18"><path d="M11 2H9v3h2z"/><path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z"/></svg></button>
    </form>
</div>

<%- include('partials/footer.ejs') %>